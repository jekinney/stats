# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name displayed in UI and emails
APP_NAME="HLstatsX Stats"

# Environment: local, testing, staging, production
# Production: Set to 'production' and disable debug mode
APP_ENV=local

# Application key for encryption (generate with: php artisan key:generate)
# CRITICAL: Must be set before deployment
APP_KEY=

# Debug mode - MUST be false in production for security
# Shows detailed error pages with stack traces
APP_DEBUG=true

# Application URL - used for generating absolute URLs
# Production: Set to your domain (https://stats.yourdomain.com)
APP_URL=http://localhost

# Application timezone
APP_TIMEZONE=UTC

# Localization settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode driver
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log channel: stack, single, daily, slack, syslog, errorlog
# Production: Use 'daily' with log aggregation service
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection: mysql, sqlite, pgsql, sqlsrv
# Production: Use mysql or pgsql
# Testing: Use sqlite (configured in phpunit.xml)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=stats
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session driver: file, cookie, database, redis, memcached, array
# Production: Use redis for better performance and scalability
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Session security settings
# Production: Set SECURE_COOKIE=true (requires HTTPS)
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache driver: redis, memcached, database, file, array
# Production: Use redis for shared cache across multiple servers
# Development: redis or database
# Testing: array (no persistence)
CACHE_STORE=redis
CACHE_PREFIX=

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Queue driver: redis, database, beanstalkd, sqs, sync
# Production: Use redis or database with queue workers
# Development: sync for immediate execution, database for testing
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis client: phpredis (faster) or predis (pure PHP)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================

# Mail driver: smtp, ses, mailgun, mandrill, log, array
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# OTHER SERVICES
# =============================================================================

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Memcached (alternative to Redis)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# AWS (if using S3 for storage or SES for email)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# LARAVEL FORTIFY (AUTHENTICATION)
# =============================================================================

# Available features: registration, reset-passwords, email-verification,
#                     update-profile-information, update-passwords,
#                     two-factor-authentication
FORTIFY_FEATURES=registration,reset-passwords,email-verification,update-profile-information,update-passwords,two-factor-authentication

# =============================================================================
# APPLICATION SPECIFIC SETTINGS
# =============================================================================

# Stats caching (seconds)
# How often to refresh cached statistics
STATS_CACHE_TTL=300

# API response caching (seconds)
API_CACHE_TTL=60

# Rate limiting (requests per minute)
API_RATE_LIMIT=60
API_RANKINGS_RATE_LIMIT=10

# Event processing
EVENT_BATCH_SIZE=100
EVENT_MAX_RETRIES=3
EVENT_RETRY_DELAY=60

# Skill calculation (ELO system)
SKILL_K_FACTOR=32
SKILL_DEFAULT_RATING=1000

# Pagination
DEFAULT_PER_PAGE=20
MAX_PER_PAGE=100

# Database settings
DB_QUERY_TIMEOUT=30
SLOW_QUERY_THRESHOLD=100

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60
ERROR_RATE_THRESHOLD=10

# =============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# =============================================================================
# Before deploying to production, ensure you have:
#
# Security:
#  [ ] APP_ENV=production
#  [ ] APP_DEBUG=false
#  [ ] APP_KEY generated (php artisan key:generate)
#  [ ] Strong DB_PASSWORD set
#  [ ] REDIS_PASSWORD set
#  [ ] SESSION_SECURE_COOKIE=true (HTTPS only)
#  [ ] All secrets rotated from development
#  [ ] SSL/TLS certificates installed
#
# Performance:
#  [ ] CACHE_STORE=redis
#  [ ] QUEUE_CONNECTION=redis
#  [ ] SESSION_DRIVER=redis
#  [ ] Opcache enabled in php.ini
#  [ ] Database indexes created
#
# Monitoring:
#  [ ] Log aggregation configured
#  [ ] Uptime monitoring configured
#  [ ] APM configured
#  [ ] Backup strategy implemented
#
# See DEPLOYMENT.md for complete deployment guide

